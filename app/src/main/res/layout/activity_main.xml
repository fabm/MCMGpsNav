<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="degrees"
            android:id="@+id/tvCurrentDegrees"
            android:layout_row="0"
            android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btCoordsAndCompass"
        android:layout_toLeftOf="@+id/btCoordsAndCompass" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="latitude"
            android:id="@+id/tvLatitude"
            android:layout_row="0"
            android:layout_column="2"
        android:layout_columnSpan="1"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btExportar"
        android:layout_alignEnd="@+id/btExportar" />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="longitude"
            android:id="@+id/tvLongitude"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_gravity="center_horizontal|right"
        android:layout_below="@+id/tvLatitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btExportar"
        android:layout_alignEnd="@+id/btExportar" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude next"
                android:id="@+id/tvMainLatNext"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:password="false"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btExportar"
        android:layout_alignEnd="@+id/btExportar" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longitude next"
                android:id="@+id/tvMainLonNext"
                android:layout_row="1"
                android:layout_column="3"
                android:layout_gravity="right"
        android:layout_below="@+id/tvMainLatNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/btExportar"
        android:layout_alignEnd="@+id/btExportar" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="degrees to next"
                android:id="@+id/tvMainDegreesToNext"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:password="false"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="distance to next"
                android:id="@+id/tvMainDistance"
        android:layout_column="3"
        android:layout_gravity="right"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="definir destino"
                android:id="@+id/btDefDestino"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="center_horizontal|bottom"
        android:layout_above="@+id/btCoordsAndCompass"
        android:layout_alignRight="@+id/btCoordsAndCompass"
        android:layout_alignEnd="@+id/btCoordsAndCompass" />

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="exportar"
            android:id="@+id/btExportar"
            android:layout_row="2"
            android:layout_column="2"
        android:layout_gravity="right"
        android:layout_above="@+id/tgTimer"
        android:layout_alignRight="@+id/tgTimer"
        android:layout_alignEnd="@+id/tgTimer" />

    <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista gravados"
                android:id="@+id/btCoordsAndCompass"
        android:layout_row="5"
                android:layout_column="2"
                android:layout_gravity="right"
        android:layout_alignTop="@+id/tgTimer"
        android:layout_toRightOf="@+id/btLimparBd"
        android:layout_toEndOf="@+id/btLimparBd" />

    <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="limpar bd"
                android:id="@+id/btLimparBd"
                android:layout_row="4"
                android:layout_column="2"
        android:enabled="true"
        android:layout_below="@+id/btDefDestino"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle timer"
                android:id="@+id/tgTimer"
                android:layout_row="6"
                android:layout_column="2"
                android:layout_gravity="right"
                android:textOn="Timer ativado"
                android:textOff="Timer desativado"
        android:checked="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MEUS GRAUS"
        android:id="@+id/lblBearing"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DADOS GPS:"
        android:id="@+id/textView"
        android:layout_below="@+id/tvCurrentDegrees"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PROXIMO PONTO:"
        android:id="@+id/textView2"
        android:layout_below="@+id/tvLongitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DISTANCIA:"
        android:id="@+id/textView3"
        android:layout_below="@+id/tvMainLonNext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="GRAUS:"
        android:id="@+id/textView4"
        android:layout_below="@+id/tvMainDistance"
        android:layout_alignLeft="@+id/tvCurrentDegrees"
        android:layout_alignStart="@+id/tvCurrentDegrees" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="MEU BEARING"
        android:id="@+id/lblbearing"
        android:layout_below="@+id/lblBearing"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
