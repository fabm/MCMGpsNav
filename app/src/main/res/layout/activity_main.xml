<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btExportarDados">

        <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="degrees"
                android:id="@+id/tvCurrentDegrees"
                android:layout_row="0"
                android:layout_column="0"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="latitude"
                android:id="@+id/tvLatitude"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_columnSpan="1"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="exportar"
                android:id="@+id/btExportar"
                android:layout_row="1"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="longitude"
                android:id="@+id/tvLongitude"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_gravity="center_horizontal|right"
                />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="definir destino"
                android:id="@+id/btDefDestino"
                android:layout_row="2"
                android:layout_column="2"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_margin="20dp"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="limpar bd"
                android:id="@+id/btLimparBd"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:enabled="true"/>

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista gravados"
                android:id="@+id/btCoordsAndCompass"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_row="4"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"/>

        <ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toggle timer"
                android:id="@+id/tgTimer"
                android:layout_row="5"
                android:layout_column="2"
                android:layout_gravity="center_horizontal"
                android:textOn="Timer ativado"
                android:textOff="Timer desativado"
                android:layout_margin="20dp"
                android:checked="true"/>

    </GridLayout>

</RelativeLayout>
